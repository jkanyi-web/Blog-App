<%= form_with model: [ current_user, @user.posts.build ], class: 'form-group mt-5' do |f| %>
  <div class="mb-3">
    <% f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class="mb-3">
    <% f.label :text, class: 'form-label' %>
    <%= f.text_area :text, class: 'form-control', placeholder: 'Text' %>
  </div>

  <%= f.submit "Create Post", class: 'btn btn-dark' %>
<% end %>
