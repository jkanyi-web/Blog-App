<% @users.each do |user| %>
  <div class="row">
    <div class="col">
      <div class="jumbotron shadow p-3">
        <%= image_tag(user.photo || 'default_image.jpg', alt: user.name, class: 'user-image') %>
        <h1 class="display-3 font-weight-bold d-inline-block"><%= link_to (user.name.presence || "Unnamed User"), user_path(user), class: 'text-decoration-none text-dark' %></h1>   
        <p class="right m-3">Number of posts: <%= user.posts.count %></p>
      </div>
    </div>
  </div>
<% end %>
